<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:paddingBottom="18dp" >
    
    <ImageView
        android:id="@+id/usaid_about_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/usaidlogo"
        android:contentDescription="@string/usaid_image" />
    
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usaid_about_image"
        android:layout_margin="4dp" >
        
        <TextView
            style="@style/usaid_medium_text.bold"
            android:id="@+id/usaid_about_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/usaid_disclaimer" />
    
    </ScrollView>
    
</RelativeLayout>